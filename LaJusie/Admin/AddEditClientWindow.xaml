<Window x:Class="LaJusie.Admin.AddEditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=" " Height="350" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Имя:"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Сохранить" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="80" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>       
    </Grid>
</Window>