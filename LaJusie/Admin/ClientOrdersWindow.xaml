<Window x:Class="LaJusie.Admin.ClientOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказы клиента" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="ClientInfoText" Grid.Row="0" Margin="10" FontWeight="Bold"/>

        <DataGrid x:Name="OrdersGrid" Grid.Row="1" Margin="10" 
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер заказа" Binding="{Binding Order_ID}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}"/>
                <DataGridTextColumn Header="Ширина" Binding="{Binding Width}"/>
                <DataGridTextColumn Header="Высота" Binding="{Binding Height}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>