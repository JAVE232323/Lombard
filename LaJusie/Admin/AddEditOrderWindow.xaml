<Window x:Class="LaJusie.Admin.AddEditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Клиент:"/>
            <ComboBox x:Name="ClientComboBox" Margin="0,0,0,10" 
          DisplayMemberPath="FullName"/>

            <TextBlock Text="Адрес установки:"/>
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Дата залога:"/>
            <DatePicker x:Name="OrderDatePicker" Margin="0,0,0,10" SelectedDateFormat="Short"/>

            <TextBlock Text="Размеры (см):"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBox x:Name="WidthTextBox" Width="80" Margin="0,0,10,0" 
             Text="0" PreviewTextInput="NumberValidationTextBox"/>
                <TextBlock Text="x" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="HeightTextBox" Width="80" Margin="0,0,10,0" 
             Text="0" PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>

            <TextBlock Text="Статус:"/>
            <ComboBox x:Name="StatusComboBox" Margin="0,0,0,20" 
          DisplayMemberPath="Name"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="80" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>

        
    </Grid>
</Window>