<UserControl x:Class="LaJusie.Orders.StatusSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaJusie.Orders"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="Black" Opacity="0.7" MouseDown="Rectangle_MouseDown"/>
        <Border CornerRadius="50" Width="500" Height="200" Background="White" Padding="25">
            <StackPanel Margin="10">
                <TextBlock Text="Выберите новый статус:" Margin="0,0,0,10"/>
                <ComboBox x:Name="ComboBoxStatuses" DisplayMemberPath="Name"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Name="Cancel" Content="Отмена" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
                    <Button Name="Save" Content="Сохранить" Width="80" Click="Save_Click" IsDefault="True"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
